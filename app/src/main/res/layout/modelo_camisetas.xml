<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="horizontal"
    android:paddingLeft="80dp">


    <androidx.cardview.widget.CardView
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:background="#98FB98"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/idImgCamiseta"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:paddingLeft="6dp"
                android:src="@drawable/camisetaum" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Modelo 1"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/idDescricao1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Camisetas esportivas:"
                android:textColor="#454343"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idDescricao2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Personalize a camiseta do seu patrocinador ou da sua empresa."
                android:textColor="#454343"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1" />

                <TextView
                    android:id="@+id/idPontuacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="100dp"
                    android:paddingTop="4dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"

                        android:src="@drawable/ic_baseline_favorite_border" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"

                        android:src="@drawable/ic_baseline_share" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>